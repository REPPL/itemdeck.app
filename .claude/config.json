{
  "project": {
    "name": "itemdeck",
    "type": "typescript",
    "description": "Responsive grid for displaying card collections"
  },
  "typescript": {
    "runtime": "node",
    "package_manager": "npm"
  },
  "ai_transparency": {
    "level": "full",
    "commit_footer": true,
    "documentation": true
  },
  "documentation": {
    "style": "diataxis",
    "roadmap_style": "feature-centric",
    "audience": "mixed"
  },
  "working_files": {
    "directory": ".work",
    "patterns": ["*.tmp", "*.temp", ".temp/"]
  },
  "privacy": {
    "block_personal_data": true,
    "block_hardcoded_paths": true,
    "allowed_email_domains": ["example.com", "example.org", "example.net"]
  }
}
